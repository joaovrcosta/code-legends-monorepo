{
  "name": "code-legends-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "autoprefixer": "10.4.17",
    "husky": "^9.1.7",
    "postcss": "8.4.35",
    "tailwindcss": "3.4.19",
    "turbo": "^2.8.5"
  },
  "packageManager": "pnpm@9.15.9",
  "pnpm": {
    "overrides": {
      "zod": "3.21.4",
      "glob": "^11.0.0",
      "inflight": "^1.0.6",
      "source-map": "^0.7.4",
      "superagent": "^10.0.0"
    }
  }
}
